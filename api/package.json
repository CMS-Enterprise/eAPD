{
  "name": "@cms-eapd/api",
  "version": "0.0.1",
  "description": "APD api for CMS HITECH program",
  "main": "dist/main.js",
  "scripts": {
    "lint": "eslint '**/*.js'",
    "scaffold": "rm -rf dist/db/* && rm -rf dist/migrations/* && rm -rf dist && mkdir dist && cp package.json dist/ && cp -r schemas dist/",
    "build": "yarn scaffold && babel . --ignore \"node_modules/!file-type/**\",\"dist\",\"coverage-endpoint\" -d ./dist -s",
    "start": "npm run build && node dist/main.js",
    "start-dev": "NODE_ENV=development nodemon --inspect=0.0.0.0 --exec babel-node ./main.js -e js",
    "npm-check": "npx npm-check-updates",
    "knex-console": "node --experimental-repl-await knexrepl.js",
    "knex-make-migrate": "knex migrate:make",
    "knex-migrate": "knex migrate:latest",
    "knex-migrate-rollback": "knex migrate:rollback",
    "knex-migrate-down": "knex migrate:down",
    "mongoose-make-migrate": "migrate --config mongo-migrate.js create",
    "mongoose-migrate": "migrate --config mongo-migrate.js --autosync up",
    "mongoose-migrate-down": "migrate --config mongo-migrate.js down",
    "migrate": "yarn run knex-migrate && yarn run mongoose-migrate",
    "seed": "knex seed:run --specific=main.js",
    "seed-dev": "NODE_ENV=development DEV_DB_HOST=localhost yarn run seed",
    "seed-users": "knex seed:run --specific=base-users.js",
    "jest": "NODE_ENV=test jest",
    "tap": "NODE_ENV=test tap -J --no-browser --no-coverage --no-timeout",
    "test": "NODE_ENV=test tap -J --cov --coverage-report=text --coverage-report=lcov --no-browser",
    "test-endpoints": "jest --detectOpenHandles --forceExit --runInBand",
    "test-specific": "NODE_ENV=test tap --cov --coverage-report=text-lcov --no-browser",
    "endpointFullTest": "./endpoint-tests/endpoint.sh",
    "fullTest": "./unit-test.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CMSgov/eAPD.git"
  },
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/CMSgov/eAPD/issues"
  },
  "homepage": "https://github.com/CMSgov/eAPD#readme",
  "engines": {
    "node": "16.16.0"
  },
  "dependencies": {
    "@cms-eapd/common": "0.0.1",
    "@okta/jwt-verifier": "2.6.0",
    "@okta/okta-sdk-nodejs": "6.5.0",
    "ajv": "8.11.0",
    "aws-sdk": "2.1193.0",
    "axios": "0.27.2",
    "body-parser": "1.20.0",
    "chalk": "4.1.2",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "date-fns": "2.29.1",
    "dotenv": "15.0.1",
    "express": "4.18.1",
    "express-fileupload": "1.4.0",
    "express-validator": "6.14.2",
    "fast-json-patch": "3.1.1",
    "file-type": "16.5.4",
    "form-data": "4.0.0",
    "jsonpatch": "3.1.0",
    "jsonpatch-to-mongodb": "1.0.0",
    "jsonpointer": "5.0.1",
    "jsonwebtoken": "8.5.1",
    "knex": "1.0.7",
    "migrate-mongoose": "4.0.0",
    "mongoose": "5.13.14",
    "morgan": "1.10.0",
    "newrelic": "8.16.0",
    "pg": "8.7.3",
    "sanitize-html": "2.7.1",
    "sharp": "0.30.7",
    "swagger-ui-express": "4.5.0",
    "uuid": "8.3.2",
    "winston": "3.8.1",
    "zxcvbn": "4.4.2"
  },
  "devDependencies": {
    "babel-jest": "27.5.1",
    "colors": "1.4.0",
    "core-js": "3.24.1",
    "eslint": "8.21.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "jest": "27.5.1",
    "nodemon": "2.0.19",
    "sinon": "14.0.0",
    "supertest": "6.2.4",
    "tap": "16.3.0"
  },
  "updateRestrictions": {
    "file-type": "can't upgrade to 17 because it requires babel",
    "mongoose": "we aren't upgrading to 6.x yet because it's not highly supported by other packages"
  },
  "jest": {
    "coverageDirectory": "./coverage-endpoint/",
    "rootDir": "./",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/coverage-endpoint/"
    ],
    "globalSetup": "./jest.setup.js",
    "globalTeardown": "./jest.teardown.js",
    "testRegex": ".*.endpoint.(j|t)s[x]?$",
    "testEnvironment": "node",
    "testTimeout": 30000,
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@cms-eapd/common|file-type)"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "collectCoverageFrom": [
      "routes/**/*.{js,jsx}",
      "!/dist/**/*.{js,jsx}",
      "!**/*.test.js",
      "!**/__snapshots__/**",
      "!**/openAPI.js"
    ]
  },
  "tap": {
    "files": "!(node_modules|dist|coverage)/**/*.test.{mjs,js}",
    "lines": 75,
    "functions": 60,
    "branches": 49,
    "statements": 75,
    "nyc-arg": [
      "--reporter-dir=./coverage/",
      "--exclude=./dist/**/*.js",
      "--exclude=./**/*.endpoint.js",
      "--exclude=./**/index.js",
      "--exclude=./**/migrations/**",
      "--exclude=./**/mongo-migrations/**",
      "--exclude=./**/openAPI.js",
      "--exclude=./**/routes/**/index.js",
      "--exclude=./**/schemas/**",
      "--exclude=./**/seeds/**",
      "--exclude=./**/test-data/**",
      "--exclude=./**/node_modules/**",
      "--exclude=./**/__snapshots__/**",
      "--exclude=./**/audit.js",
      "--exclude=./**/auth/mockedOktaAuth.js",
      "--exclude=./**/db/knex.js",
      "--exclude=./**/db/mongodb.js",
      "--exclude=./**/seeds/development/apds.js"
    ]
  }
}
