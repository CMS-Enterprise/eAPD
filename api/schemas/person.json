{
  "$id": "person.json",
  "type": "object",
  "required": ["title", "description", "years"],
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "years": {
      "type": "object",
      "patternProperties": {
        "^[0-9]{4}$": {
          "type": "object",
          "required": ["amt", "perc"],
          "properties": {
            "amt": {
              "$ref": "definitions.json#/definitions/optionalNumber"
            },
            "perc": {
              "$ref": "definitions.json#/definitions/optionalNumber"
            }
          }
        }
      }
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema"
}
