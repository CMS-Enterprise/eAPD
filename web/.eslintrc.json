{
  "extends": "airbnb",
  "rules": {
    "comma-dangle": [1, "never"],
    "react/jsx-filename-extension": 0,
    "jsx-a11y/anchor-is-valid": [
      2,
      {
        "components": ["Link"],
        "specialLink": ["to"]
      }
    ]
  },
  "env": {
    "browser": true
  },
  "overrides": [
    {
      "files": ["**/*.test.js"],
      "globals": {
        "describe": false,
        "expect": false,
        "test": false
      }
    }
  ]
}
